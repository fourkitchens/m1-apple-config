# Aliasing
alias ll="ls -lahP"
alias pist="gist -P -pco"

# Command Line Prompt
PS1='[\u@\w]\$ '

# Terminal coloring
export CLICOLOR=1

# PATH management
export PATH=/opt/homebrew/bin:$PATH
export PATH=$HOME/Sites:$HOME/Sites/vendor:$PATH
export PATH=/usr/local/bin:$PATH
export PATH="/opt/homebrew/opt/php@7.4/bin:$PATH"
export PATH="/opt/homebrew/opt/php@7.4/sbin:$PATH"
